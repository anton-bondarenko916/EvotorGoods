<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_custom">

    <TextView
        android:id="@+id/monitor_goods_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/monitor_goods"
        android:textColor="#7B7779"
        android:textSize="14sp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monitor_goods_textview"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_marginTop="20dp">

        <RadioButton android:id="@+id/radio_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/list"
            android:background="@drawable/radio_selector"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:drawableTop="@drawable/ic_list"
            android:button="@color/black_custom"
            android:layout_gravity="center" />

        <RadioButton android:id="@+id/radio_tile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/big_tile"
            android:background="@drawable/radio_selector"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:textSize="14sp"
            android:drawableTop="@drawable/ic_big_tiles"
            android:button="@color/black_custom"
            android:layout_gravity="center"/>

        <RadioButton android:id="@+id/radio_small_tile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/small_tile"
            android:background="@drawable/radio_selector"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:drawableTop="@drawable/ic_small_tiles"
            android:button="@color/black_custom"
            android:layout_gravity="center"/>
    </RadioGroup>

    <ImageView
        android:id="@+id/imageview_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/list_of_goods" />

</androidx.constraintlayout.widget.ConstraintLayout>